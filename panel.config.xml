<?xml version="1.0" encoding="UTF-8"?>
<plugin>
	<info>
		<version>
			<pluginVersion>1.0</pluginVersion>
			<requiresAtLeast>6.1.0.0</requiresAtLeast>
		</version>
		<description>Stamp assets with metadata</description>
		<documentationUrl>https://github.com/WoodWing/elvis_metadata_stamper</documentationUrl>
	</info>
	<panel>
		<url>${pluginUrl}/index.html</url>
		
		<iconUrl>${pluginUrl}/icon.svg</iconUrl>

		<panelLocations>
			<panelLocation id="mainRightPanel" order="1"/>
		</panelLocations>

		<requiredRoles>
			<role>ROLE_CUSTOM_METADATA_STAMPER</role>
		</requiredRoles>

		<messages>
			<entries locale="en_US">
				<entry key="title">Metadata stamper</entry>
				<entry key="button.tooltip">Open the metadata stamper</entry>
			</entries>
		</messages>

	</panel>
</plugin>
